{
    "name": "@egomobile/jobs",
    "version": "0.1.0",
    "description": "Easy to use job scheduler helpers.",
    "main": "lib/index.js",
    "engines": {
        "node": ">=12.0.0"
    },
    "scripts": {
        "build": "del ./lib && tsc",
        "docs:generate": "del ./docs && typedoc --out ./docs ./src",
        "lint": "eslint -c .eslintrc.js --ext .ts src",
        "lint:fix": "eslint --fix -c .eslintrc.js --ext .ts src",
        "sandbox": "nodemon --watch './sandbox.ts' --exec node -r ts-node/register --inspect=0.0.0.0:9229 ./sandbox.ts",
        "test": "jest --no-cache --silent"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "testMatch": [
            "**/__tests__/**/*.test.ts"
        ],
        "setupFilesAfterEnv": [
            "./src/setupTests.ts"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/egomobile/node-jobs.git"
    },
    "keywords": [
        "node",
        "cron",
        "jobs",
        "job scheduler",
        "ego"
    ],
    "author": "Next.e.GO Mobile SE, Aachen, Germany",
    "license": "LGPL-3.0",
    "files": [
        "index.d.ts",
        "CHANGELOG.md",
        "LICENSE",
        "lib",
        "!lib/**/__tests__/**/*",
        "!lib/**/*.map",
        "!lib/**/setupTests.*",
        "README.md"
    ],
    "dependencies": {
        "@types/node": "12.20.28",
        "node-schedule": "2.0.0"
    },
    "devDependencies": {
        "@egomobile/tsconfig": "5.0.0",
        "@types/node-schedule": "1.3.2",
        "del-cli": "4.0.1",
        "eslint": "7.32.0",
        "eslint-config-ego": "0.15.0",
        "nodemon": "2.0.14",
        "ts-node": "10.4.0",
        "tslint": "6.1.3",
        "typedoc": "0.22.7",
        "typescript": "4.4.4"
    }
}